<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Author"
        android:id="@+id/tvAuthorName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras cursus nec tortor a aliquet. Maecenas sagittis id diam non faucibus. Curabitur vitae eleifend dolor. Pellentesque sit amet tortor volutpat, rutrum nunc eget, facilisis est. Suspendisse semper, tortor ut lacinia consectetur, dui massa faucibus justo, porta facilisis odio magna at urna."
        android:id="@+id/tvComment"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_alignTop="@+id/tvAuthorName"
        android:layout_toRightOf="@+id/tvAuthorName"
        android:layout_toEndOf="@+id/tvAuthorName"
        android:layout_marginLeft="8dp" />

</RelativeLayout>